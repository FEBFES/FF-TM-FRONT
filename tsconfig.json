{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components/index.ts"], 
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routing/*"],
      "@routes": ["src/routing/index.ts"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages/index.ts"]
    },
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}